{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple bar chart with neighborhood overlay.",
  "width": "container",
  "height": "container",
  "autosize":"fit",
  "layer":[
    {
      "data": { "url": "barData.csv", "name": "reportData" },
      "mark": { "type": "bar" },
      "encoding": {
        "y": {
          "field": "data_value",
          "type": "quantitative"
        },
        "x": {
          "field": "geo_entity_id",
          "type": "nominal",
          "sort": "y",
          "axis": null
        },
        "color": { "value": "grey" },
        "tooltip": [
          { "field": "data_value", "type": "quantitative" },
          { "field": "geo_entity_name", "type": "nominal" }
        ]
      }
    },
      {
        "data": { "url": "barData.csv", "name": "neighborhood" },
        "transform": [
            {"filter": {"field":"geo_entity_name","equal":"Canarsie - Flatlands"}}
        ],
        "mark": { "type": "bar" },
        "encoding": {
          "y": {
            "field": "data_value",
            "type": "quantitative"
          },
          "x": {
            "field": "geo_entity_id",
            "type": "nominal",
            "sort": "y",
            "axis": null
          },
          "color": { "value": "orange" },
          "tooltip": [
            { "field": "data_value", "type": "quantitative" },
            { "field": "geo_entity_name", "type": "nominal" }
          ]
        }
      }  ]
  
}
